# .editorconfig for C# Analyzer project

root = true

[*.cs]
# Use spaces for indentation
indent_style = space
# Indentation size
indent_size = 4
# End files with a newline
insert_final_newline = true
# Trim trailing whitespace 
trim_trailing_whitespace = true
# Use UTF-8 encoding
charset = utf-8

# C# specific rules
[*.cs]
# Use file-scoped namespaces
csharp_style_namespace_declarations = file_scoped:suggestion
# Prefer expression-bodied members
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion
# Prefer 'var' when type is apparent
csharp_style_var_when_type_is_apparent = true:suggestion
# Prefer explicit type when type is not apparent
csharp_style_var_elsewhere = false:suggestion
# Prefer using directives inside namespaces
dotnet_style_require_using_directive_placement = inside_namespace:suggestion
